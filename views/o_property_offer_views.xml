<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="o_property_offer_view_tree" model="ir.ui.view">
        <field name="name">o.property.offer.view.tree</field>
        <field name="model">o.property.offer</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="price" />
                <field name="properties_id" />
                <field name="partner_id" />
                <field name="status" />
                
            </tree>
        </field>
    </record>
    
    <record id="o_property_offer_view_form" model="ir.ui.view">
        <field name="name">o.property.offer.view.form</field>
        <field name="model">o.property.offer</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>

                        <group>
                            <field name="price" />
                            <field name="partner_id" />
                            <field name="validity" />
                        </group>
                        <group>
                            <field name="status" />
                            <field name="properties_id" />
                            <field name="date_deadline" />
                        </group>

                    </group>
                </sheet>
            </form>
        </field>
    </record>

